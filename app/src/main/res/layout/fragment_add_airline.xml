<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_background"
    android:orientation="vertical"
    android:padding="30dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:baselineAligned="false"
        android:text="@string/add_new_air_line"
        android:textColor="#333333"
        android:textSize="20sp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/search_background"
        android:hint="@string/air_line_name"
        android:maxLines="1"
        android:padding="15dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_slogon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/search_background"
        android:hint="@string/slogan"
        android:maxLines="1"
        android:padding="15dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/search_background"
        android:hint="@string/country"
        android:maxLines="1"
        android:padding="15dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/search_background"
        android:hint="@string/headquarters"
        android:maxLines="1"
        android:padding="15dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_establish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/search_background"
        android:hint="@string/established"
        android:inputType="number"
        android:maxLines="1"
        android:padding="15dp" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/btn_background"
        android:padding="13dp"
        android:text="@string/confirm"
        android:textColor="@color/white"/>
    <Button
        android:id="@+id/btn_cancle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_background"
        android:padding="13dp"
        android:text="@string/cancle"
        android:textColor="#333333" />
</LinearLayout>